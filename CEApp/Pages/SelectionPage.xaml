<Page x:Class="CEApp.Pages.SelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CEApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectionPage"
      ShowsNavigationUI="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
                x:Name="CompaniesButton"
                Content="Go To Companies" Click="CompaniesButton_Click"/>
        <Button Grid.Column="1"
                x:Name="EmployeesButton"
                Content="Go To Employees" Click="EmployeesButton_Click"/>
        <Button Grid.Column="2"
                x:Name="GradesButton"
                Content="Go To Grades" Click="GradesButton_Click"/>
        <Button Grid.Column="3"
                x:Name="StudentsButton"
                Content="Go To Students" Click="StudentsButton_Click"/>
    </Grid>
</Page>
